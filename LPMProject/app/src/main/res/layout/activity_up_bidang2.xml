<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bagus.lpmproject.UpBidang2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="14dp"
            android:paddingTop="14dp"
            android:paddingLeft="14dp"
            android:paddingRight="14dp">
            <TextView
                android:paddingTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ketersediaan Papan nama masjid" />
            <RadioGroup
                android:id="@+id/papan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/papan1"
                    android:text="ada"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:id="@+id/papan2"
                    android:text="tidak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RadioGroup>

            <TextView
                android:paddingTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Masjid dibangun berdasarkan maket yang disiapkan " />
            <RadioGroup
                android:id="@+id/maket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/maket1"
                    android:text="ya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:id="@+id/maket2"
                    android:text="tidak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RadioGroup>

            <TextView
                android:paddingTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Masjid memperhatikan simbol-simbol budaya " />
            <RadioGroup
                android:id="@+id/simbol"
                android:layout_below="@+id/twudlu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/simbol1"
                    android:text="ya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:id="@+id/simbol2"
                    android:text="tidak "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RadioGroup>

            <TextView
                android:paddingTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Masjid memenuhi aspek artistik  " />
            <RadioGroup
                android:id="@+id/artistik"
                android:layout_below="@+id/twudlu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/ars1"
                    android:text="ya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:id="@+id/ars2"
                    android:text="tidak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RadioGroup>
            <TextView
                android:paddingTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Masjid memenuhi kriteria kekokohan/ kemegahan  " />
            <RadioGroup
                android:id="@+id/megah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/megah1"
                    android:text="ya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:id="@+id/megah2"
                    android:text="tidak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RadioGroup>

            <TextView
                android:paddingTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Masjid memenuhi kriteria kebersihan dan kesehatan " />
            <RadioGroup
                android:id="@+id/bersih"
                android:layout_below="@+id/twudlu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/bersih1"
                    android:text="ya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:id="@+id/bersih2"
                    android:text="tidak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RadioGroup>

            <TextView
                android:paddingTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Masjid menyediakan lahan parkir  " />
            <RadioGroup
                android:id="@+id/parkir"
                android:layout_below="@+id/twudlu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/parkir1"
                    android:text="ya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:id="@+id/parkir2"
                    android:text="tidak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RadioGroup>
            <TextView
                android:paddingTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Masjid memperhatikan kenyamanan lingkungan " />
            <RadioGroup
                android:id="@+id/nyaman"
                android:layout_below="@+id/twudlu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/nyaman1"
                    android:text="ya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:id="@+id/nyaman2"
                    android:text="tidak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RadioGroup>

            <TextView
                android:paddingTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pemeliharaan bangunan fisik masjid memenuhi persyaratan keamanan " />
            <RadioGroup
                android:id="@+id/aman"
                android:layout_below="@+id/twudlu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/aman1"
                    android:text="ya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:id="@+id/aman2"
                    android:text="tidak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RadioGroup>

            <TextView
                android:paddingTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pemeliharaan/perawatan bangunan fisik masjid memenuhi persyaratan keartistikan " />
            <RadioGroup
                android:id="@+id/artistik2"
                android:layout_below="@+id/twudlu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/a0"
                    android:text="ya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:id="@+id/a2"
                    android:text="tidak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RadioGroup>
            <TextView
                android:paddingTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="perawatan masjid memenuhi kriteria kebersihan dan terbebas dari najis " />
            <RadioGroup
                android:id="@+id/najis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/najis1"
                    android:text="ya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:id="@+id/najis2"
                    android:text="tidak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RadioGroup>

            <TextView
                android:paddingTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pemeliharaan masjid memenuhi kriteria keindahan dan kenyamanan lingkungan" />
            <RadioGroup
                android:id="@+id/indah"
                android:layout_below="@+id/twudlu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/indah0"
                    android:text="ya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:id="@+id/indah1"
                    android:text="tidak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RadioGroup>

            <TextView
                android:paddingTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pemeliharaan masjid memenuhi kriteria kesehatan" />
            <RadioGroup
                android:id="@+id/sehat"
                android:layout_below="@+id/twudlu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/sehat1"
                    android:text="ya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:id="@+id/sehat2"
                    android:text="tidak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RadioGroup>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kontak person takmir"
                    android:textSize="15dp"/>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/ketua"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/t1"
                        android:inputType="number"
                        android:background="@drawable/underline"
                        android:hint="Ketua"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/sekretaris"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/t1"
                        android:inputType="number"
                        android:background="@drawable/underline"
                        android:hint="Sekretaris"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/bendahara"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/t1"
                        android:inputType="number"
                        android:background="@drawable/underline"
                        android:hint="Bendahara"/>
                </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/sertifikasi"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/t1"
                    android:inputType="text"
                    android:background="@drawable/underline"
                    android:hint="Sertifikasi"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/imb"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/t1"
                    android:inputType="text"
                    android:background="@drawable/underline"
                    android:hint="IMB"/>
            </android.support.design.widget.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jumlah jamaah sholat"
                    android:textSize="15dp"/>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/subuh"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/t1"
                        android:inputType="number"
                        android:background="@drawable/underline"
                        android:hint="Shalat Subuh"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/ashar"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/t1"
                        android:inputType="text"
                        android:background="@drawable/underline"
                        android:hint="Shalat Dzuhur dan Ashar"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/maghrib"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/t1"
                        android:inputType="text"
                        android:background="@drawable/underline"
                        android:hint="Shalat Maghrib dan Isya’"/>
                </android.support.design.widget.TextInputLayout>
            <ImageView
                android:id="@+id/img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Foto dari depan"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Import Image"
                android:id="@+id/button1"
                android:drawableRight="@android:drawable/ic_menu_gallery"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Foto Ruang Utama"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Import Image"
                android:id="@+id/button2"
                android:drawableRight="@android:drawable/ic_menu_gallery"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Foto Tempat Wudlu"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Import Image"
                android:id="@+id/button3"
                android:drawableRight="@android:drawable/ic_menu_gallery"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Foto Kamar Mandi"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Import Image"
                android:id="@+id/button4"
                android:drawableRight="@android:drawable/ic_menu_gallery"/>

                <Button
                    android:id="@+id/smpn2"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Update"
                    android:textColor="#f2f4f7"
                    android:background="@drawable/round"/>


        </LinearLayout>

    </ScrollView>
</LinearLayout>
